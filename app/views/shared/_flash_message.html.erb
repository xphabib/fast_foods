<% flash.each do |name, msg| %>
    <div id ="flash-box">
      <div class="centered flash-message alert alert-dismissable alert-<%= name == :notice or name == 'notice' ? 'success' : 'danger' %>">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= msg.html_safe %>
        <% flash.delete(name) -%>
      </div>
    </div>
<% end %>
